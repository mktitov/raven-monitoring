<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>raven</display-name>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>remote-api</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>org.raven.server.app.res</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>remote-api</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-class>org.raven.server.app.filter.RavenFilter</filter-class>
        <filter-name>RavenFilter</filter-name>
    </filter>
    <filter-mapping>
        <filter-name>RavenFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
